<%= form_with(model: @user, local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @user} %>
      
      <%= f.label :名前, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :メールアドレス, class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :パスワード, class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "パスワード再入力", class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <br>
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>