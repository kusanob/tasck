<% provide(:title, 'タスク一覧') %>

<h2>タスク一覧</h2>
 
  <div class= "row">
    <div class="col-md-10 col-md-offset-1">
      <div class="text-right">
        <%= link_to "タスク新規作成", new_task_path, class: "btn btn-lg btn-primary" %>
      </div>
      
      <table class="table table-hover">
      
      <thead>
        <tr>
          <th><%= User.human_attribute_name :title %></th>
          <th><%= User.human_attribute_name :created_at%></th>
        </tr>
      </thead>
    
      <tbody>
        
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.created_at %></td>
          </tr>
        <% end %>
        
      </tbody>
      </table>
    </div>
  </div>

  