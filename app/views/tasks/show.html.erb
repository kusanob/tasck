<% provide(:title, 'show Task') %>

<h2>タスク詳細</h2>
　<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered">
        <tr>
          <th class= "task_th">ID</th>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <th class= "task_th">名称</th>
          <td><%= @task.title %></td>
        </tr>
        <tr>
          <th class= "task_th">詳細</th>
          <td class= "text"><%= Rinku.auto_link(@task.detail, :all, 'target="_blank"').html_safe %></td>
        </tr>
        <tr>
          <th class= "task_th">作成日</th>
          <td><%= l @task.created_at, format: :long %></td>
        </tr>
        <tr>
          <th class= "task_th">更新日</th>
          <td><%= l @task.updated_at, format: :long %></td>
        </tr>
      </table>
      
      
      <%= link_to "編集", edit_user_task_path, class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_task_path, method: :delete,
      data: { confirm: "本当に削除してもよろしいですか？",
              cancel: "キャンセル",
              commit: "削除",
              }, title: "#{@task.title}のデータを削除します。",
              class: "btn btn-lg btn-danger" %>
    </div>
  </div>