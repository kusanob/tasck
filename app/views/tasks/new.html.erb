<% provide(:title, 'New Task') %>

<h2>タスク新規作成</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_with(model: @task, url: {controller: 'tasks', action: 'create' }, local: true) do |f| %>
        <%= render partial: 'shared/error_messages', locals: {object: @task} %>

        <%= f.label :"タイトル" %> 
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :"詳細" %>
        <%= f.text_area :detail, class: "form-control", rows: 5 %>

        <br>
        <%= f.submit "新規作成", class: "btn btn-lg btn-primary" %>
      
      <% end %>
    </div>
  </div>
 